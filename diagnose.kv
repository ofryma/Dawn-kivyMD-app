#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

<DemoProject>:
    Screen:
        name:'diagnose'
        MDFloatLayout:
            orientation: "vertical"
            md_bg_color: get_color_from_hex("#FDFAF7")


            Image:
                halign: "center"
                pos_hint: {"center_x": 0.5 , "center_y":0.5}
                size_hint: 0.9 , 0.9
                source: "diagnostic_results.jpg"

            MDFillRoundFlatButton:

                size_hint: None, None
                width: dp(70) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                height: dp(200)
                md_bg_color: get_color_from_hex("#FDFAF7")
                pos_hint: {"center_x": .87 , "center_y": 0.93}
                size_hint_y: 0.03
                Image:
                    id: menu_btn
                    source: 'menu.png'






            BottomNavbarCard:
                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('home')
                        Image:
                            source: 'home.png'

                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('daily')
                        Image:
                            source: 'daily.png'

                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('diagnose')
                        Image:
                            source: 'diagnose_p.png'


                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('profile')
                        Image:
                            source: 'profile.png'


