#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window
#:import FadeTransition kivy.uix.screenmanager.FadeTransition



<DemoProject>:
    Screen:
        name: 'login'
        LoginLayout:


            MDFillRoundFlatButton:
                id: login_btn
                halign: "center"
                md_bg_color: get_color_from_hex("#012241")
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                on_press: app.go_to('question')

            ArrowButton:
                id: sign_up_page
                pos_hint: {"center_x": 0.56, "center_y": 0.02}
                on_press: app.go_to('signup')

            LoginLabelCard:
                pos_hint: {"center_x": 0.6, "center_y": 0.8}
                LoginHeaderLabel:
                    text: 'Login'


            LoginLabelCard:
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                LoginGeneralLabel:
                    text: 'Username'
            LoginInputCard:
                pos_hint: {"center_x": 0.5, "center_y": 0.53}
                MDBoxLayout:
                    orientation: "horizontal"
                    LoginInputField:
                        id: username_login


            LoginLabelCard:
                pos_hint: {"center_x": 0.5, "center_y": 0.47}
                LoginGeneralLabel:
                    text: 'Password'
            LoginInputCard:
                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                MDBoxLayout:
                    orientation: "horizontal"
                    LoginInputField:
                        id: password_login
                        password: True


            LoginLabelCard:
                pos_hint: {"center_x": 0.5, "center_y": 0.33}
                LoginGeneralLabel:
                    text: 'Forgot password?'
                    halign: 'right'



            LoginButton:
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                MDBoxLayout:
                    LoginButtonLabel:
                        text: 'LOGIN'





            MDCard:
                orientation: "vertical"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.02
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                MDLabel:
                    text: 'or'
                    halign: "center"
                    font_size: 12
                    color: 1,1,1,1


            MDCard:
                orientation: "horizontal"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.02
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.1}
                MDFloatLayout:
                    MDIconButton:
                        halign: "center"
                        icon: "facebook_logo.png"
                        on_release: app.facebook_login()
                        size: self.parent.size
                        user_font_size: "5sp"
                        pos_hint: {"center_x": 0.43, "center_y": 0.5}
                    MDIconButton:
                        halign: "center"
                        icon: "google_logo.png"
                        on_release: app.google_login()
                        size: self.parent.size
                        user_font_size: "5sp"
                        pos_hint: {"center_x": 0.57, "center_y": 0.5}




            LoginFooter:
                LoginFooterLabel:
                    text: "Don't have an account? Sign Up"
