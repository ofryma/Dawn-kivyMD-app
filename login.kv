#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window
#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<DemoProject>:
    Screen:
        name: 'login'
        MDFloatLayout:
            md_bg_color: get_color_from_hex("#012241")
            orientation: 'vertical'

            MDFillRoundFlatButton:
                id: login_btn
                halign: "center"
                md_bg_color: get_color_from_hex("#012241")
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                on_press: app.go_to('question')

            MDFillRoundFlatButton:
                id: sign_up_page
                halign: "center"
                md_bg_color: get_color_from_hex("#012241")
                pos_hint: {"center_x": 0.5, "center_y": 0.02}
                on_press: app.go_to('signup')

            MDCard:
                orientation: "vertical"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.08
                elevation: 0
                pos_hint: {"center_x": 0.6, "center_y": 0.8}
                MDLabel:
                    text: 'Login'
                    halign: "left"
                    bold: True
                    font_size: 30
                    color: get_color_from_hex("#FFBA99")


            MDCard:
                orientation: "vertical"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.08
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                MDLabel:
                    text: 'Username'
                    halign: "left"
                    color: 1,1,1,1

            MDCard:
                orientation: "vertical"
                padding: 10

                md_bg_color: get_color_from_hex("#FFFFFF")
                size_hint: 0.9 , 0.08
                pos_hint: {"center_x": 0.5, "center_y": 0.53}
                elevation: 3
                radius: [20]
                MDBoxLayout:
                    orientation: "horizontal"
                    MDTextField:
                        required: True
                        halign: "center"
                        pos_hint: {"center_x": 0.55, "center_y": 0.53}
                        foreground_color: 0,0,0,1
                        font_size: 25



            MDCard:
                orientation: "vertical"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.02
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.47}
                MDLabel:
                    text: 'Password'
                    halign: "left"
                    color: 1,1,1,1

            MDCard:
                orientation: "vertical"
                padding: 10

                md_bg_color: get_color_from_hex("#FFFFFF")
                size_hint: 0.9 , 0.08
                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                elevation: 3
                radius: [20]
                MDBoxLayout:
                    orientation: "horizontal"
                    MDTextField:
                        required: True
                        halign: "center"
                        foreground_color: 0,0,0,1
                        pos_hint: {"center_x": 0.55, "center_y": 0.53}
                        font_size: 25

            MDCard:
                orientation: "vertical"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.02
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.33}
                MDLabel:
                    text: 'Forgot password?'
                    halign: "right"
                    color: 1,1,1,1


            MDCard:
                orientation: "vertical"
                padding: 10

                md_bg_color: get_color_from_hex("#FFBA99")
                size_hint: 0.9 , 0.08
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                elevation: 3
                radius: [20]
                MDBoxLayout:
                    MDLabel:
                        halign: "center"
                        text: 'LOGIN'
                        bold: True
                        pos_hint: {"center_x": 0.55, "center_y": 0.53}
                        color: 1,1,1,1




            MDCard:
                orientation: "vertical"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.02
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                MDLabel:
                    text: 'or'
                    halign: "center"
                    font_size: 12
                    color: 1,1,1,1

            MDCard:
                orientation: "horizontal"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.02
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.1}
                MDFloatLayout:
                    MDIconButton:
                        halign: "center"
                        icon: "facebook_logo.png"
                        on_release: app.facebook_login()
                        size: self.parent.size
                        user_font_size: "5sp"
                        pos_hint: {"center_x": 0.43, "center_y": 0.5}
                    MDIconButton:
                        halign: "center"
                        icon: "google_logo.png"
                        on_release: app.google_login()
                        size: self.parent.size
                        user_font_size: "5sp"
                        pos_hint: {"center_x": 0.57, "center_y": 0.5}



            MDCard:
                orientation: "horizontal"
                md_bg_color: get_color_from_hex("#012241")
                size_hint: 0.9 , 0.05
                elevation: 0
                pos_hint: {"center_x": 0.5, "center_y": 0.02}
                MDLabel:
                    halign: "center"
                    text: "Don't have an account? Sign Up"
                    font_size: 13
                    color: 1,1,1,1
