#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

<DemoProject>:
    Screen:
        name:'daily'
        MDFloatLayout:
            md_bg_color: get_color_from_hex("#FDFAF7")
            orientation: 'vertical'






            Image:
                source: 'indicates.png'


            MDFillRoundFlatButton:

                size_hint: None, None
                width: dp(70) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                height: dp(200)
                md_bg_color: get_color_from_hex("#FDFAF7")
                pos_hint: {"center_x": .87 , "center_y": 0.93}
                size_hint_y: 0.03
                Image:
                    id: menu_btn
                    source: 'menu.png'








            BottomNavbarCard:
                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('home')
                        Image:
                            source: 'home.png'

                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('daily')
                        Image:
                            source: 'daily_p.png'

                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('diagnose')
                        Image:
                            source: 'diagnose.png'


                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('profile')
                        Image:
                            source: 'profile.png'







