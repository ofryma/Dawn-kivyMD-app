#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

<DemoProject>:
    Screen:
        name:'home'
        MDFloatLayout:
            md_bg_color: get_color_from_hex("#FDFAF7")
            orientation: 'vertical'

            MDFillRoundFlatButton:

                size_hint: None, None
                width: dp(70) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                height: dp(200)
                md_bg_color: get_color_from_hex("#FDFAF7")
                pos_hint: {"center_x": .87 , "center_y": 0.93}
                size_hint_y: 0.03
                Image:
                    id: menu_btn
                    source: 'menu.png'

            Image:
                id: user_img
                halign: "center"
                source: 'user.png'
                size_hint_y: 0.07
                allow_stretch: True
                pos_hint: {"center_x": 0.2 , "center_y": 0.9}


            MDLabel:
                id: user_name
                text: "Hello Dana"
                halign: "center"
                color: 0,0.439,0.313,1
                bold: True
                pos_hint: {"center_x": 0.45 , "center_y": 0.91}
                font_size: 20

