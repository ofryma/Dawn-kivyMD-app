#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MDScreen:
    name: 'question'

    ProfilePageLayout:
        CountImage:
            id: count
        QuestionImage:
            id: question_img
        QuestionNumber:
            id: question_number

        ArrowButtonLeft:
            on_press: app.go_to("back")

        MDBoxLayout:
            size_hint: 0.8 , 1
            halign: "left"
            pos_hint: {"center_x": .5 , "center_y": 0.49}


            MDLabel:
                id: question_text
                text: app.cur_question
                halign: "left"
                pos_hint: {"center_x": .6 , "center_y": 0.41}
                color: 0,0.439,0.313,1
                bold: True

        ArrowButton:
            pos_hint: {"center_x": .5 , "center_y": 0.27}
            on_press: app.on("yes")
        QuestionButton:
            id: yes_btn
            pos_hint: {"center_x": .5 , "center_y": 0.27}
            QuestionButtonLabel:
                id: yes_btn_label
                text: "Yes"

        ArrowButton:
            pos_hint: {"center_x": .5 , "center_y": 0.185}
            on_press: app.on("no")
        QuestionButton:
            id: no_btn
            pos_hint: {"center_x": .5 , "center_y": 0.185}
            QuestionButtonLabel:
                id: no_btn_label
                text: "No"

        ArrowButton:
            pos_hint: {"center_x": .5 , "center_y": 0.09}
            on_press: app.go_to('next_question')
        QuestionButton:
            id: next_btn
            pos_hint: {"center_x": .5 , "center_y": 0.09}
            md_bg_color: get_color_from_hex("#012241")
            QuestionButtonLabel:
                text: "Next"
                color: 1,1,1,1











