#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

<DemoProject>:
    Screen:
        name: 'question'



        MDBoxLayout:
            orientation: 'vertical'

            MDFloatLayout:
                md_bg_color: get_color_from_hex("#FDFAF7")
                orientation: 'vertical'
                Image:
                    id: count1
                    source: 'count_1.png'
                    pos_hint: {"center_x": .5 , "center_y": 0.9}
                Image:
                    id: img_Q1
                    source: 'Q1.png'
                    pos_hint: {"center_x": .5 , "center_y": 0.65}
                MDLabel:
                    id: Q_number_1
                    text: "QUESTION 1 OF 9"
                    halign: "left"
                    pos_hint: {"center_x": .6 , "center_y": 0.47}
                    font_size: 13
                    color: 0.498,0.56,0.611,1
                    bold: True
                MDBoxLayout:
                    size_hint: 0.8 , 1
                    halign: "left"
                    pos_hint: {"center_x": .5 , "center_y": 0.49}

                    MDLabel:
                        id: question
                        text: app.cur_question
                        halign: "left"
                        pos_hint: {"center_x": .6 , "center_y": 0.41}
                        color: 0,0.439,0.313,1
                        bold: True


                MDFillRoundFlatButton:
                    text: "Yes"
                    size_hint: None, None
                    width: dp(200) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                    height: dp(200)
                    md_bg_color: get_color_from_hex("#FDFAF7")
                    pos_hint: {"center_x": .5 , "center_y": 0.27}
                    on_release: app.on('yes')
                    Image:
                        id: btn_yes_1
                        source: 'button_yes.png'

                MDFillRoundFlatButton:

                    size_hint: None, None
                    width: dp(70) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                    height: dp(200)
                    md_bg_color: get_color_from_hex("#FDFAF7")
                    pos_hint: {"center_x": .13 , "center_y": 0.93}
                    on_release: app.back()
                    Image:
                        id: back_btn
                        source: 'back_btn.png'

                MDFillRoundFlatButton:
                    text: "No"

                    size_hint: None, None
                    width: dp(200) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                    height: dp(200)
                    md_bg_color: get_color_from_hex("#FDFAF7")
                    pos_hint: {"center_x": .5 , "center_y": 0.185}
                    on_release: app.on('no')
                    Image:
                        id: btn_no_1
                        source: 'button_no.png'


                MDFillRoundFlatButton:
                    # text: "Next"
                    size_hint: None, None
                    width: dp(200) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                    height: dp(200)
                    pos_hint: {"center_x": .5 , "center_y": 0.09}
                    md_bg_color: get_color_from_hex("#FDFAF7")
                    custom_color: 0, 1, 0, 1
                    on_press: app.go_to('next_question')
                    Image:
                        source: 'button_next.png'




