#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

<DemoProject>:
    Screen:
        name:'profile_diagnoseMe'
        ProfilePageLayout:

            MenuButton:
                MenuImage:
            MDFloatLayout:
                SignoutButton:
                    SignoutImage:

            UserImage:

            EditIcon:
                on_press: app.profile_changes('diagnose')
                on_release: app.go_to('profile')
                Image:
                    source: 'plus_btn.png'


            UserNameLabel:





            ClosedCard:
                pos_hint: {"center_x": 0.5, "center_y": 0.66}
                CardContentBox:
                    CardContentImage:
                        source: 'person_logo.png'
                    CardContentLabel:
                        text: "My Account"
                    ArrowButton:
                        on_press: app.go_to('profile')
                        Image:
                            source: 'right_button.png'



            OpenCard:
                md_bg_color: get_color_from_hex("#FFFFFF")
                pos_hint: {"center_x": 0.5, "center_y": 0.42}
                CardContentBox:
                    CardContentImage:
                        source: 'list_logo.png'
                    CardContentLabel:
                        text: "Diagnose Me"
                    ArrowButton:
                        Image:
                            source: 'down_button.png'



            ClosedCard:
                pos_hint: {"center_x": 0.5, "center_y": 0.56 - 0.38}
                CardContentBox:
                    CardContentImage:
                        source: 'shield_logo.png'
                    CardContentLabel:
                        text: "Security"
                    ArrowButton:
                        on_press: app.go_to('profile_security')
                        Image:
                            source: 'right_button.png'







            #*************** Bottom navbar **************

            BottomNavbarCard:
                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('home')
                        Image:
                            source: 'home.png'

                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('daily')
                        Image:
                            source: 'daily.png'

                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('diagnose')
                        Image:
                            source: 'diagnose.png'


                BoxForButton:
                    BottomNavbarButton:
                        on_release: app.go_to('profile')
                        Image:
                            source: 'profile_p.png'



































